---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import HeroSection from "../components/HeroSection.astro"
import Form from "../components/Form.astro";
import Card from "../components/Card.astro";
---

<Layout title="Carreras Ucasal">
	<Header />
	<main class="snap-y snap-mandatory relative w-full h-screen overflow-hidden">
		<div class="snap-center">
			<HeroSection />
		</div>
	</main>
	<Form />
	<div class="justify-center mb-5 card-container grid xl:grid-cols-5 lg:grid-cols-4 md:grid-cols-3 sm:grid-cols-2">
		<Card />
		<Card />
		<Card />
		<Card />
		<Card />
	</div>
	<!-- mapig cards to be added here -->
	<!-- <script>
		array.map(function (item) {
			return <Card />
		})
	</script> -->
</Layout>

<style>
    /* Estilos del contenedor de columnas */
    .card-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1rem;
    }
  </style>